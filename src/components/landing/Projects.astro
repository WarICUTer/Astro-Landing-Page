---
import {projects} from '../../config/projects.json'
---

<h2 class="font-bold text-5xl my-10 text-center">Projects</h2>

<div class="flex flex-wrap justify-center w-full">
    {
        projects.map(project => (
            <div class="flex md:text-left text-center flex-col md:flex-row max-w-4xl">
                <div class="flex-1">
                    <h2 class="font-bold text-2xl my-4">{project.title}</h2>
                    <p class="my-2">{project.description}</p>
                    <button class="bg-indigo-500 px-5 py-2 hover:bg-indigo-400 rounded-xl">More info</button>
                </div>
                <div class="flex">
                    <img src={project.img} alt={project.title} class="w-80 mx-auto my-4 md:my-6">
                </div>    
            </div>
        ))
    }
</div>